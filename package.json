{
  "name": "electron-llama-app",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "productName": "Mist",
  "description": "Privacy-focused AI agent with local LLM",
  "author": "Your Name",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "package": "npm run build && electron-builder --dir",
    "make": "npm run build && electron-builder"
  },
  "dependencies": {
    "@node-llama-cpp/mac-arm64-metal": "^3.14.2",
    "dotenv": "^16.4.5",
    "electron-positioner": "^4.1.0",
    "electron-store": "^10.0.0",
    "follow-redirects": "^1.15.11",
    "lucide-react": "^0.474.0",
    "node-llama-cpp": "^3.14.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.17",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "it.okrame.mist",
    "productName": "Mist",
    "executableName": "Mist",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/node-llama-cpp/**",
      "**/node_modules/@node-llama-cpp/**",
      "**/node_modules/@reflink/**"
    ],
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "!out/models/**",
      "!models/**",
      "!src/models/**",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["deb", "rpm", "AppImage"],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "dmg": {
      "format": "ULFO"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}