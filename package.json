{
  "name": "electron-llama-app",
  "version": "1.0.0",
  "main": ".webpack/main",
  "productName": "Mist",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@node-llama-cpp/mac-arm64-metal": "^3.14.2",
    "dotenv": "^16.4.5",
    "electron-positioner": "^4.1.0",
    "electron-store": "^10.0.0",
    "follow-redirects": "^1.15.11",
    "lucide-react": "^0.474.0",
    "node-llama-cpp": "^3.14.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.10.0",
    "electron": "^32.1.2",
    "node-loader": "^2.1.0",
    "postcss": "^8.4.35",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": {
          "unpackDir": "node_modules/@node-llama-cpp/**"
        },
        "extraResource": [
          "node_modules/@node-llama-cpp",
          "node_modules/@reflink"
        ],
        "executableName": "Mist",
        "appBundleId": "it.okrame.mist"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "name": "mist_privacy_agent"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.jsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/main/preload.js"
                  }
                }
              ]
            },
            "externalDependencies": [
              "node-llama-cpp",
              "@node-llama-cpp/mac-arm64-metal",
              "@reflink/reflink"
            ]
          }
        }
      ]
    }
  }
}